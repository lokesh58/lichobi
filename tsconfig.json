{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "paths": {}
  },
  "include": ["./src/**.ts", "./src/**.json"],
  "exclude": ["./build", "node_modules"]
}
